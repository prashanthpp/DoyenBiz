                      ShowMinButton="False"
                      ShowMaxRestoreButton="False"
                      ShowCloseButton="False"
                      BorderBrush="Black"
                      BorderThickness="1"
                      TitleCaps="False"
                      ResizeMode="NoResize"
                      WindowStartupLocation="CenterScreen"
                      WindowState="Maximized"
                      WindowStyle="None"
                      IgnoreTaskbarOnMaximize="True"
